<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>Coccimarket</title>
  <link rel="icon" href="images/logo_coccimarket.png">
  {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
  {% block stylesheets %}
  <link href="/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
   <link rel="stylesheet" href="/css/starter-template.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/fontawesome.css">
  <link rel="stylesheet" href="/css/brands.css">
  <link rel="stylesheet" href="/css/solid.css">
  {{ encore_entry_link_tags('app') }}
  {% endblock %}

  {% block javascripts %}
  {{ encore_entry_script_tags('app') }}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
  {% endblock %}
</head>

<body>

  <!--Top anchor-->
  <a name="top"></a>

  <!--Back to top button-->
  <a href="#" id="toTopBtn" class="cd-top text-replace js-cd-top cd-top--is-visible cd-top--fade-out"
    data-abc="true"></a>

  <!--Navbar-->
  <nav class="navbar navbar-expand-lg bg-dark text-white fixed-top">
    <div class="container-fluid">

      <!--Logo-->
      <img src="/images/logo_coccimarket.png" width="50"></img>
      <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon text-white"></span>
      </button>

      <!--Home-->
      <div class="collapse navbar-collapse text-white" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-white">
          <li class="nav-item text-white">
            <a class="nav-link active text-white" aria-current="page" href="/page/1"><i class="fa-solid fa-house"></i> {{'Home'|trans}}</a>
          </li>

          <!--Our produits-->
          <li class="nav-item dropdown text-white">
            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              <i class="fa-solid fa-book-open"></i> {{'Our produits'|trans}}
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/produit/catalog"><i class="fa-solid fa-book"></i> {{'Catalog'|trans}}</a></li>
              <li><a class="dropdown-item" href="/produit/futur"><i class="fa-solid fa-clock"></i> {{'Upcoming produits'|trans}}</a></li>
              <li><a class="dropdown-item" href="#"><i class="fa-solid fa-comment"></i> {{'Suggest a produit'|trans}}</a></li>

              <li><hr class="dropdown-divider"></li>

              <li><a class="dropdown-item" href="#"><i class="fa-solid fa-envelope"></i> {{'Give your opinion'|trans}}</a></li>
            </ul>
          </li>

          <!--Our center-->
          <li class="nav-item text-white">
            <a class="nav-link inactive text-white" aria-current="page" href="#"><i class="fa-solid fa-magnifying-glass"></i> {{'Our center'|trans}}</a>
          </li>

          {% if is_granted('ROLE_ADMIN') %}

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              | &nbsp; &nbsp; <i class="fa-solid fa-screwdriver-wrench"></i> Administration
            </a>

            <!--Formations-->
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/produit"><i class="fa-solid fa-list-ul"></i> {{'Formations list'|trans}}</a></li>
              <li><a class="dropdown-item" href="/produit/new"><i class="fa-solid fa-plus"></i> {{'New produit'|trans}}</a></li>

              <li><hr class="dropdown-divider"></li>

               <!--Pages-->
              <li><a class="dropdown-item" href="/page"><i class="fa-solid fa-list-ul"></i> {{'Pages list'|trans}}</a></li>
            </ul>

            {% endif %}
          </li>
        </ul>
        <!--Registration/Login/Logout-->
        <ul class="navbar-nav align-right mb-2 mb-lg-0 text-white">
          <li class="nav-item text-white">
            <!--Logout-->
            {% if app.user %}
            <a class="nav-link text-white btn btn-danger" aria-current="page" href="/logout"><i class="fa-solid fa-right-from-bracket"></i> {{'Sign out'|trans}}</a>
            {% else %}

            <!--Login-->
          <li class="nav-item text-white">
            <a class="nav-link text-white" aria-current="page" href="/login"><i class="fa-solid fa-arrow-right-to-bracket"></i> {{'Sign in'|trans}}</a>
          </li>

          <!--Register-->
          <li class="nav-item text-white">
            <a class="nav-link text-white btn btn-primary" aria-current="page" href="/register"><i class="fa-solid fa-user-pen"></i> {{'Sign up'|trans}}</a>
          </li>
          {% endif %}
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <br><br>

  <div class="col-lg-8 mx-auto p-4 py-md-5">
    <main>
      {% block body %}{% endblock %}
    </main>

    <!--Footer-->
    <footer class="pt-5 my-5 text-muted">
      &copy;
    </footer>

  </div>

</body>

</html>